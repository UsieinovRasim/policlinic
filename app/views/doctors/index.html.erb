.card
  .card-body.form-group
    %h1
      Услуги
    %a.btn.btn-outline-primary{href: new_doctor_path}
      = 'Новая услуга'
    %table.table.table-hover
      %thead
        %tr
          %th= 'id'
          %th= 'Название'
          %th= 'Дата создания'
          %th
      %tbodys
        - @doctors.each do |doctor|
          %tr{style: "vertical-align: middle;"}
            %td= doctor.id
            %td= link_to doctor.name, doctor_path(doctor), { class: 'nav-link' }
            %td= doctor.created_at.strftime('%d.%m.%Y - %H:%M')
            %td
              = link_to "Редактировать", edit_doctor_path(doctor), :class => 'btn btn-warning'
              = link_to "Удалить", doctor_path(doctor), method: :delete, data: { confirm: "Вы уверены?" }, :class => 'btn btn-danger'
